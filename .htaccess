RewriteEngine On

# Rewrite base to your project folder if it's not the root
RewriteBase /minesmart/

# Remove .php extension for pages
RewriteRule ^auth/register$ app/views/auth/register.php [L]
RewriteRule ^auth/login$ app/views/auth/login.php [L]
RewriteRule ^dashboard$ app/views/dashboard/index.php [L]


RewriteRule ^sites$ app/views/sites/index.php [L]
RewriteRule ^alerts$ app/views/alerts/index.php [L]
RewriteRule ^disaster-monitoring$ app/views/disaster-monitoring/index.php [L]
RewriteRule ^rehabilitation$ app/views/rehabilitation/index.php [L]
RewriteRule ^reports$ app/views/reports/index.php [L]
